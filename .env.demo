# 演示模式配置 - 无需OpenAI API Key也可以体验功能
OPENAI_API_KEY=demo_mode

# 服务端口
PORT=3000

# GitHub配置（演示模式可选）
GITHUB_TOKEN=
GITHUB_REPO=q877220/gffdfs
GITHUB_BRANCH=main

# AI模型配置（演示模式会使用模拟数据）
AI_MODEL=gpt-3.5-turbo
MAX_TOKENS=2000
TEMPERATURE=0.7

# 文章生成配置
ARTICLES_PER_BATCH=10
GENERATE_INTERVAL_MINUTES=5
AUTO_PUSH_ENABLED=false

# 热点关键词来源
KEYWORD_SOURCES=weibo,baidu,zhihu,douyin

# 演示模式设置
DEMO_MODE=true
DEMO_DELAY=1000
