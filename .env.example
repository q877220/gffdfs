# 环境变量配置
OPENAI_API_KEY=your_openai_api_key_here
PORT=3000

# 微博热搜API (可选)
WEIBO_API_KEY=your_weibo_api_key

# 百度热搜API (可选) 
BAIDU_API_KEY=your_baidu_api_key

# GitHub配置 (用于自动推送)
GITHUB_TOKEN=your_github_token
GITHUB_REPO=q877220/gffdfs
GITHUB_BRANCH=main

# AI模型配置
AI_MODEL=gpt-3.5-turbo
MAX_TOKENS=2000
TEMPERATURE=0.7

# 文章生成配置
ARTICLES_PER_BATCH=10
GENERATE_INTERVAL_MINUTES=5
AUTO_PUSH_ENABLED=true

# 热点关键词来源
KEYWORD_SOURCES=weibo,baidu,zhihu,douyin
